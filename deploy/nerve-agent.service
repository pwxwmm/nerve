[Unit]
Description=Nerve Agent - Distributed Infrastructure Intelligence
Documentation=https://github.com/pwxwmm/nerve
After=network.target

[Service]
Type=simple
# Configure these via environment file or command line
ExecStart=/usr/local/bin/nerve-agent --server=%i --token=%I
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/nerve-agent
CapabilityBoundingSet=CAP_SYS_ADMIN CAP_NET_ADMIN

# Resource limits
LimitNOFILE=65536
MemoryLimit=512M
CPUQuota=50%

[Install]
WantedBy=multi-user.target

